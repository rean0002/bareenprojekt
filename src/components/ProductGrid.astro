    name: 'Plugin x Bareen, Swimsuit - White',
    price: 499,
    colors: ['#ffffff', '#a52a2a', '#000000']
  },
  {
    image: '/public/img/shorts.webp',
    name: 'Plugin x Bareen, Swimsuit - White',
    price: 499,
    colors: ['#ffffff', '#a52a2a', '#000000']
  },
    {
    image: '/public/img/bathrope.webp',
    name: 'Plugin x Bareen, Swimsuit - White',
    price: 499,
    colors: ['#ffffff', '#a52a2a', '#000000']
  },
    {
    image: '/public/img/beanie.webp',
    name: 'Plugin x Bareen, Swimsuit - White',
    price: 499,
